{
    "version": "0.2.0",
    "configurations": [
        // ==========================  API  ==========================
        {
            "name": "Run Api",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.main:app",
                "--reload"
            ],
            "jinja": true,
            "presentation": {
                "group": "Api",
                "order": 1
            },
        },
        {
            "name": "Test Api",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "justMyCode": true,
            "args": [
                "discover",
                "-s",
                "./api",
                "-p",
                "*_test.py"
            ],
            "presentation": {
                "group": "Api",
                "order": 2
            },
        },
        // ==========================  Engine  ==========================
        {
            "name": "Test Engine",
            // "preLaunchTask": "Export secrets from .env to shell environment",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "justMyCode": true,
            "args": [
                "discover",
                "-s",
                "./engine",
                "-p",
                "*_test.py"
            ],
            "presentation": {
                "group": "Engine",
                "order": 1
            },
        },
        // ==========================  Etc  ==========================
        {
            "name": "Test All",
            "type": "debugpy",
            "request": "launch",
            // "cwd": "${workspaceFolder}",
            "module": "unittest",
            "justMyCode": true,
            "args": [
                "discover",
                "-s",
                ".",
                "-p",
                "*_test.py"
            ],
            "presentation": {
                "group": "Etc",
                "order": 1
            },
        },
    ]
}