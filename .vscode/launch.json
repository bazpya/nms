{
    "version": "0.2.0",
    "configurations": [
        // ==============================  App  ==============================
        {
            "name": "App Run",
            "type": "node-terminal",
            "request": "launch",
            "command": "docker compose -f ./docker/compose-app-run.yml up",
            "presentation": {
                "group": "1",
                "order": 1
            },
            "postDebugTask": "container-down",
        },
        {
            "name": "App Debug",
            "type": "debugpy",
            "request": "attach",
            "preLaunchTask": "app-await-debugger",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "."
                }
            ],
            "presentation": {
                "group": "1",
                "order": 2,
            },
            "postDebugTask": "container-down",
        },
        // ==============================  Tests  ==============================
        {
            "name": "Tests Run",
            "type": "node-terminal",
            "request": "launch",
            "command": "docker compose -f ./docker/compose-tests-run.yml up",
            "presentation": {
                "group": "2",
                "order": 1
            },
            "postDebugTask": "container-down",
        },
        {
            "name": "Tests Debug",
            "type": "debugpy",
            "request": "attach",
            "preLaunchTask": "tests-await-debugger",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "."
                }
            ],
            "presentation": {
                "group": "2",
                "order": 2,
            },
            "postDebugTask": "container-down",
        },
        // ==============================  Image  ==============================
        {
            "name": "Image Build",
            "type": "node-terminal",
            "request": "launch",
            "command": "docker image build -f ./docker/Dockerfile . -t baz-nms",
            "presentation": {
                "group": "3",
                "order": 1
            },
        },
        {
            "name": "Image Delete",
            "type": "node-terminal",
            "request": "launch",
            "command": "docker image rm -f baz-nms",
            "presentation": {
                "group": "3",
                "order": 2
            },
        },
    ]
}